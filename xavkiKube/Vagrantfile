Vagrant.configure("2") do |config|

	config.vm.define "kubemaster" do |kubemaster|
		kubemaster.vm.box = "generic/debian11"
		kubemaster.vm.hostname = "kubemaster"
        kubemaster.vm.network "forwarded_port", guest: 22, host: 60022        
		kubemaster.vm.network "private_network", ip: "192.168.56.11"
        kubemaster.vm.provision "docker"
		kubemaster.vm.provision "shell" do |sh|
			sh.inline = <<-SHELL
				sudo sed -i 's/#ListenAddress 0.0.0.0/ListenAddress 0.0.0.0/g' /etc/ssh/sshd_config
        sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/g' /etc/ssh/sshd_config
        echo "" > /home/vagrant/.ssh/authorized_keys
        echo "ssh-rsa  alexandre.nguyen@deveryware.com" >> /home/vagrant/.ssh/authorized_keys
				sudo systemctl restart sshd
			SHELL
		end
        kubemaster.vm.provider :qemu do |qe|
            qe.arch = "x86_64"
            qe.machine = "q35"
            qe.cpu = "qemu64"
            qe.smp = "2"
            qe.memory = "2G"
            qe.extra_netdev_args ="net=192.168.56.0/21,dhcpstart=192.168.56.11"
            qe.net_device = "virtio-net-pci"
            qe.qemu_dir = "/usr/local/share/qemu/"
        end
	end

	config.vm.define "kubenode" do |kubenode|
		kubenode.vm.box = "generic/debian11"
		kubenode.vm.hostname = "kubenode"
        kubenode.vm.network "forwarded_port", guest: 22, host: 60023        
		kubenode.vm.network "private_network", ip: "192.168.56.12"
        kubenode.vm.provision "docker"
		kubenode.vm.provision "shell" do |sh|
			sh.inline = <<-SHELL
				sudo sed -i 's/#ListenAddress 0.0.0.0/ListenAddress 0.0.0.0/g' /etc/ssh/sshd_config
        sed -i 's/PasswordAuthentication no/PasswordAuthentication yes/g' /etc/ssh/sshd_config
        echo "" > /home/vagrant/.ssh/authorized_keys
        echo "ssh-rsa  alexandre.nguyen@deveryware.com" >> /home/vagrant/.ssh/authorized_keys
				sudo systemctl restart sshd
			SHELL
		end
        kubenode.vm.provider :qemu do |qe|
            qe.arch = "x86_64"
            qe.machine = "q35"
            qe.cpu = "qemu64"
            qe.smp = "2"
            qe.memory = "2G"
            qe.extra_netdev_args ="net=192.168.56.0/21,dhcpstart=192.168.56.12"
            qe.net_device = "virtio-net-pci"
            qe.qemu_dir = "/usr/local/share/qemu/"
        end
	end
end